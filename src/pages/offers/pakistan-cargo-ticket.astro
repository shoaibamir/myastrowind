---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Book a Cargo and Win Air Ticket for Pakistan',
  description: 'Dependable cargo to Pakistan services for timely deliveries. Simplify your logistics with our reliable and efficient shipping solutions.',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Send Cargo to Pakistan"
    title="Win Air Ticket for Pakistan"
    subtitle="Are you planing to go to Pakistan? <br>We have offer for you. Apply to Win the Air ticket to Pakistan. <br><br> کیا آپ پاکستان جانے کا ارادہ کر رہے ہیں؟ ہمارے پاس آپ کے لیے آفر ہے۔ پاکستان کا ہوائی ٹکٹ جیتنے کے لیے اپلائی کریں۔"
    actions={[
      {
        variant: 'primary',
        text: 'WhatsApp',
        href: 'https://wa.me/message/TJZP4WU2P2XGD1',
        target: '_parent',
        icon: 'tabler:square-rounded-arrow-right',
      },
      { text: 'Call now', href: 'tel:+971504948135' },
    ]}
    image={{
      src: 'https://cdn.pixabay.com/photo/2024/05/18/01/09/ai-generated-8769302_1280.jpg',
      alt: 'Cargo ticket for Pakistan',
    }}
  />

  <CallToAction
    title="Contact Us"
    subtitle="We pick, Pack and Deliver!"
    actions={[
      {
        variant: 'primary',
        text: 'Contact',
        href: '/contact',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
