---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Cargo to Pakistan',
  description: 'Dependable cargo to Pakistan services for timely deliveries. Simplify your logistics with our reliable and efficient shipping solutions.',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Shipping service to Pakistan"
    title="Cargo to Pakistan"
    subtitle="Professional team, own containers, safe delivery, affoardable price and door to door servcie"
    actions={[
      {
        variant: 'primary',
        text: 'WhatsApp',
        href: 'https://wa.me/message/TJZP4WU2P2XGD1',
        icon: 'tabler:square-rounded-arrow-right',
      },
      { text: 'Call now', href: '/' },
    ]}
    image={{
      src: 'https://cdn.pixabay.com/photo/2023/05/18/07/59/cargo-8001610_1280.jpg',
      alt: 'Cargo to Pakistan',
    }}
  />

  <CallToAction
    title="Contact Us"
    subtitle="We pick, Pack and Deliver!"
    actions={[
      {
        variant: 'primary',
        text: 'Contact',
        href: '/',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
