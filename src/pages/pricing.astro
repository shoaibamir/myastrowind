---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
  description:
    'Discover competitive Pakistan cargo rates! Your reliable shipping partner. Contact us for quotes and hassle-free deliveries. Reach us now',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Pakistan Cargo Rates and Price"
    subtitle="These are standard prices and you can get discounted price if you have more cargo."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Only pay for what you need"
    prices={[
      {
        title: 'General cargo',
        subtitle: 'Price starts from',
        price: 3.0,
        period: 'per KG',
        items: [
          {
            description: 'General Boxes, cloths, Shoes',
          },
          {
            description: 'Wooden dismantle able furniture',
          },
          {
            description: 'Kitchen items non electronics',
          },
          {
            description: 'Bed sheets, curtains, other households',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Contact us',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Electronics',
        subtitle: 'Price starts',
        price: 8.0,
        period: 'Per KG',
        items: [
          {
            description: 'Kitchen Appliances',
          },
          {
            description: 'Washing Machine, fridge, Dryer',
          },
          {
            description: 'Cooking Ranges, Water Dispenser',
          },
          {
            description: 'Exercise Machines',
          },
          {
            description: 'TV, LED, LCD',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Contact us',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Volume Base Items',
        subtitle: 'Price starts from',
        price: 5.0,
        period: 'Per KG',
        items: [
          {
            description: 'Matterses',
          },
          {
            description: 'Foam',
          },
          {
            description: 'Sofa',
          },
          {
            description: 'Big toys, Majlis, Foamy items.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Contact us',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Competitive and Transparent Pricing"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Per KG Rate',
        description: 'Choose from a range of pricing plans designed to accommodate different budgets and requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each plan, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Instant Payment on spot',
        description: `Immediate access to your chosen plan's features and templates upon subscription.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Cash Payment',
        description: 'Upgrade to higher-tier plans to unlock more features and benefits for an enhanced experience.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'Bank Transfer',
        description: 'Questions answered via live chat, email or phone, every calendar day.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A journey from first call to door delivery"
    tagline="simple process"
    isReversed={true}
    items={[
      {
        title: 'Explore pricing',
        icon: 'tabler:number-1',
      },
      {
        title: 'Call us for clarification',
        icon: 'tabler:number-2',
      },
      {
        title: 'Schedule a pickup',
        icon: 'tabler:number-3',
      },
      {
        title: 'Weigh the cargo in your presence',
        icon: 'tabler:number-4',
      },
      {
        title: 'Seal the cargo and billing process',
        icon: 'tabler:number-5',
      },
      {
        title: 'Shipping and delivery',
        icon: 'tabler:number-6',
      },
      {
        title: 'Get your cargo at your door step',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1627309366653-2dedc084cdf1?q=80&w=1666&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Frequent asked question about Pakistan cargo rates and prices."
    columns={1}
    items={[
      {
        title: 'How much a full container cost?',
        description:
          'Full container charges varies depends on number or items, packing, dismantling work and destination.',
      },
      {
        title: 'Is there any hidden charges?',
        description: 'Absolutely not, we will clarify all the charges before to pickup the cargo.',
      },
      {
        title: 'What is the furniture cargo price?',
        description:
          'Wooden furniture shipping charges starts from AED 2.5/kg if they are not volumative or can be dismantle.',
      },
      {
        title: 'What payment methods do you accept?',
        description: 'Cash at the time of pickup but we also accept bank transfer into bank account.',
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description: 'No, invoice charges are final as per your declration , no other charges.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Contact us Now?"
    subtitle="We will help to send your cargo to Pakistan safely."
    actions={[
      {
        variant: 'primary',
        text: 'Call us Now',
        href: 'tel:+971504948135',
      },
    ]}
  />
</Layout>
