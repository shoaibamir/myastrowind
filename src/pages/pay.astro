---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pay your Bill',
  description: 'Dependable cargo to Pakistan services for timely deliveries. Simplify your logistics with our reliable and efficient shipping solutions.',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Shipping service to Pakistan"
    title="Pay your Bill"
    subtitle="Safe and secure payment for your freight charges"
    actions={[
      {
        variant: 'primary',
        text: 'Pay Now',
        href: 'https://buy.stripe.com/fZeg2ta4i8RX1ag3cc',
        icon: 'tabler:square-rounded-arrow-right',
      },
      { text: 'Call now', href: 'tel:+971504948135' },
    ]}
    image={{
      src: 'https://cdn.pixabay.com/photo/2021/06/30/12/23/card-6376665_1280.jpg',
      alt: 'Cargo to Pakistan payment',
    }}
  />

  <CallToAction
    title="Contact Us"
    subtitle="If you have any question, please feel free to contact us"
    actions={[
      {
        variant: 'primary',
        text: 'Contact',
        href: '/contact',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
